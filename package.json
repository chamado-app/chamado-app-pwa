{
  "name": "chamado-app",
  "version": "0.0.1",
  "description": "An service desk application",
  "productName": "Chamado.app",
  "author": "Gabriel Scaranello <gabrieljscaranello@gmail.com>",
  "private": false,
  "scripts": {
    "dev": "vite --port 8080",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests --watch",
    "test:ui": "npm run test:watch -- --ui",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "@quasar/extras": "^1.16.5",
    "axios": "^1.4.0",
    "pinia": "^2.1.4",
    "quasar": "^2.12.2",
    "vue": "3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@quasar/vite-plugin": "^1.4.1",
    "@rushstack/eslint-patch": "^1.3.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/vue": "^7.0.0",
    "@tsconfig/node18": "^18.2.0",
    "@types/jsdom": "^21.1.0",
    "@types/node": "^18.16.3",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/coverage-istanbul": "^0.33.0",
    "@vitest/ui": "^0.33.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.4.0",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^36.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^9.15.1",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-config-standard": "^5.0.0",
    "sass": "1.32.12",
    "typescript": "^5.1.6",
    "vite": "^4.4.4",
    "vitest": "^0.33.0",
    "vue-tsc": "^1.8.5"
  },
  "engines": {
    "node": "^18 || ^16",
    "npm": ">= 8.19.4",
    "yarn": ">= 1.21.1"
  }
}
